@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row d-flex justify-content-center">
        <div class="col-sm">
            <h4>Create a new account</h4>
            <hr />
            @*@Html.ValidationSummary(false, "The form was filled in incorrectly!", new { @class = "alert alert-danger" })*@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="d-flex bd-highlight containerReg">

                <div class="p-2 flex-fill">
                    <div class="form-group">
                        <label asp-for="Input.Nick"></label>
                        <input asp-for="Input.Nick" class="form-control" />
                        <span asp-validation-for="Input.Nick" class="text-danger"></span>
                    </div>
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger text-wrap"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Create a user</button>
                </div>

                <div class="p-2 flex-fill">
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Roles"></label>
                        <select asp-for="Input.SelectedRole" class="form-control dropdown" asp-items="@Model.Input.Roles" ></select>
                        <span asp-validation-for="Input.Roles" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

